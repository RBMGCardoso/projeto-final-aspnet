@using Newtonsoft.Json
@model ShowSpot.Models.Conteudos

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/style.css" />
<div>
    <div class='row contentCard'>
                    <div class='col-4 contentCard-left d-flex flex-column'>
                        <img class="mt-4 mb-2" style="objectFit: 'contain' ; height: 450px" src="@JsonConvert.DeserializeObject(ViewBag.Conteudo).ImgUrl"/>
                        <div class="row justify-content-center text-center mb-5"><strong>@JsonConvert.DeserializeObject(ViewBag.Conteudo).Nome</strong></div>
                        <div class="row fs-6 justify-content-center">Ano lançamento: @JsonConvert.DeserializeObject(ViewBag.Conteudo).AnoLancamento</div>
                        <div class="row fs-6 justify-content-center">Duração: @JsonConvert.DeserializeObject(ViewBag.Conteudo).Runtime</div>
                        <div class="row fs-6 justify-content-center">Rating: @JsonConvert.DeserializeObject(ViewBag.Conteudo).Rating</div>


                        <div clas = "row fs-6 justify-content-center " style="text-align: center">
                            <a type="submit" class="btn btn-secondary" asp-controller="Conteudos" asp-action="addFavorito" asp-route-idC="@JsonConvert.DeserializeObject(ViewBag.Conteudo).Id">Adicionar à biblioteca</a>
                        </div>
                        <div clas = "row fs-6 justify-content-center text-center"  style="text-align: center">
                            <a type="submit" class="btn btn-secondary" asp-controller="Conteudos" asp-action="addWatchLater" asp-route-idC="@JsonConvert.DeserializeObject(ViewBag.Conteudo).Id">Ver mais tarde</a>
                        </div>
                    </div>
                    <div class='col contentCard-right'>
                        <div class="row m-2 mb-3">Sinopse:</div>
                        <div class="row fs-4 ps-5 pe-5 justify-content-center mb-5">@JsonConvert.DeserializeObject(ViewBag.Conteudo).Sinopse</div>
                        <div class="row justify-content-center mb-5">
                        <iframe height="500" src="@JsonConvert.DeserializeObject(ViewBag.Conteudo).LinkTrailer" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
